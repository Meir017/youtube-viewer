{
  "name": "youtube-viewer",
  "version": "1.0.0",
  "description": "A Bun CLI tool for fetching and aggregating videos from multiple YouTube channels",
  "type": "module",
  "main": "generator/index.ts",
  "scripts": {
    "start": "bun run generator/index.ts",
    "web": "bun run website/server.ts",
    "dev-web": "bun --watch run website/server.ts",
    "tools:refresh": "bun run website-tools/refresh.ts",
    "tools:enrich": "bun run website-tools/enrich.ts",
    "test": "bun test tests/unit tests/integration",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bunx playwright test",
    "test:watch": "bun test --watch tests/unit tests/integration",
    "tech": "bun run generator/index.ts --channel=@GitHub,@code,@MicrosoftDeveloper,@dotnet,@GoogleDevelopers,@shanselman,@nickchapsas,@anthropic-ai,@openai --html --output=dist/tech.html --max-age=30 --limit=500",
    "movies": "bun run generator/index.ts --channel=@peacock,@Netflix,@PrimeVideo,@HBO,@Hulu,@AppleTV,@20thCenturyStudios,@UniversalPictures,@AmazonMGMStudios,@LionsgateMovies,@BoxofficeOneMedia,@WarnerBros,@disneyplus,@hbomax,@A24,@MovieGasm,@FocusFeatures,@paramountpictures,@MovieTrailersSourceHD,@sonypictures --html --output=dist/movies.html --max-age=1460 --limit=500 --min-length=60",
    "podcasts": "bun run generator/index.ts --channel=@lexfriedman,@Alex.kantrowitz,@DwarkeshPatel,@CleoAbram,@DecoderPod,@Github,@openai,@anthropic-ai,@stripe,@Meter-Network --html --output=dist/tech-podcasts.html --max-age=730 --limit=500 --min-length=1800 --enrich --enrich-concurrency=10"
  },
  "keywords": [
    "youtube",
    "cli",
    "bun",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
