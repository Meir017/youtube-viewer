@inherits LayoutComponentBase
@inject YouTubeCatalog.UI.Services.ThemeService ThemeService

<PageTitle>YouTubeCatalog.UI</PageTitle>

<!-- Use FluentUI layout primitives for overall structure; keep NavMenu component (Nav migration is task #4) -->
<FluentStack class="page">
    <FluentStack class="app-body">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main class="main">
            <div class="top-row px-4 d-flex" style="align-items:center;gap:0.5rem;">
                <a href="https://docs.microsoft.com/aspnet/" target="_blank" rel="noopener noreferrer">About</a>
                <div style="margin-left:auto;display:flex;align-items:center;gap:0.5rem;">
                    <span class="brand-badge">YouTubeCatalog</span>
                    <ThemeToggle />
                </div>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </FluentStack>
</FluentStack>

@code {
    private bool _initialApplied;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialApplied)
        {
            // try to load stored theme; if none, apply defaults
            var ok = await ThemeService.LoadAndApplyStoredAsync();
            if (!ok) await ThemeService.ApplyDefaultsAsync();
            _initialApplied = true;
        }

        await base.OnAfterRenderAsync(firstRender);
    }
}
