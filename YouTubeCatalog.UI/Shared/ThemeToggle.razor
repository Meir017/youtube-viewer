@inject YouTubeCatalog.UI.Services.ThemeService ThemeService
@using Microsoft.Fast.Components.FluentUI

<FluentButton @onclick="Toggle" title="Toggle theme">
    <!-- Inline SVG fallback: avoids dependency on the Fluent icon collection and prevents runtime failures
         aria-hidden=true because the button has a descriptive title for screen-readers -->
    <svg class="theme-icon" width="20" height="20" viewBox="0 0 24 24" aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg">
        <path fill="currentColor" d="M12 2a1 1 0 0 1 .9.55l1.2 2.4 2.6.4a1 1 0 0 1 .55 1.7l-1.9 1.9.45 2.6a1 1 0 0 1-1.45 1.05L12 12.7 8.65 13.6a1 1 0 0 1-1.45-1.05l.45-2.6L5.76 7.05a1 1 0 0 1 .55-1.7l2.6-.4L10.1 2.55A1 1 0 0 1 12 2zM12 7.5a4.5 4.5 0 1 0 0 9 4.5 4.5 0 0 0 0-9z"/>
    </svg>
</FluentButton>

@code {
    private async Task Toggle()
    {
        await ThemeService.ToggleDarkAsync();
    }
}
